# PhoenixAlerts Environment Variables
# Make a copy of this file named .env and fill in your values

# Docker Configuration
DOCKER_IMAGE=phoenix-alerts:latest
PORT=3000

# MongoDB Configuration
MONGODB_URI=mongodb://mongo:27017/alert-manager
MONGO_VERSION=latest
MONGO_PORT=27017
MONGO_ROOT_USERNAME=
MONGO_ROOT_PASSWORD=

# Authentication Configuration
JWT_SECRET=your-secure-jwt-secret-key-change-me-for-production
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeMe!Now123

# Application Configuration
NODE_ENV=production
APP_URL=http://localhost:3000

# LLM Configuration
LLM_PROVIDER=ollama
OLLAMA_ENDPOINT=http://ollama:11434
OLLAMA_MODEL=codellama
OLLAMA_IMAGE=ollama/ollama:latest
OLLAMA_PORT=11434

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook-url